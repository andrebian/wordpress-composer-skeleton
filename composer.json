{
    "name": "andrebian/wordpress-composer-skeleton",
    "description": "Esqueleto de uma aplicação em WordPress totalmente gerenciável através do Composer",
    "type": "helper",
    "keywords": ["helper", "wordress", "composer", "wp skeleton application"],
    "authors": [
        {
            "name": "Andre Cardoso aka andrebian",
            "email": "andrecardosodev@gmail.com"
        }
    ],
    "homepage": "http://www.andrebian.com/wordpress-e-composer-parte-2",
    "repositories": [
        {
            "type": "package",
            "package": {
                "name": "wordpress",
                "type": "webroot",
                "version": "4.0",
                "dist": {
                    "type": "zip",
                    "url": "https://github.com/WordPress/WordPress/archive/4.0.zip"
                },
                "require": {
                    "fancyguy/webroot-installer": "1.0.0"
                }
            }
        },
        {
            "type": "composer",
            "url": "http://wpackagist.org"
        }
    ],
    "require": {
        "php": ">=5.3.0",
        "wordpress": "4.0",
        "wpackagist-plugin/advanced-custom-fields": "*",
        "wpackagist-theme/hueman": "*"
    },
    "extra": {
        "webroot-dir": "wp",
        "webroot-package": "wordpress"
    }
}
